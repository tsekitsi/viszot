{
    "manifest_version": 2,
    "name": "VisZot Chrome Extension",
    "description": "Connects to the local Zotero server.",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"]
        }
    ],
    "browser_action": {
        "default_title": "VisZot Chrome Extension"
    },
    "background": {
        "scripts": ["jquery.min.js", "background.js"],
        "persistent": false
    },
    "permissions": [
        "background",
        "activeTab"
    ]
}